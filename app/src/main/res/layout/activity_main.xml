<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tealgreen"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/headname"
        android:layout_width="335dp"
        android:layout_height="0dp"
        android:layout_marginTop="308dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="300dp"
        android:fontFamily="@font/cormorant_sc_light"
        android:text="BLUECOAST MERIDIAN"
        android:textAlignment="center"
        android:textColor="#b5932b"
        android:textSize="30sp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/headtag"
        android:layout_width="295dp"
        android:layout_height="206dp"
        android:fontFamily="@font/cormorant_sc_light"
        android:text="FINANCIAL SERVICES"
        android:textAlignment="center"
        android:textColor="#B5932B"
        android:visibility="gone"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.577"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/headname"
        app:layout_constraintVertical_bias="0.245" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="523dp"
        android:layout_height="190dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headname"
        app:srcCompat="@drawable/mount"
        tools:layout_editor_absoluteX="-89dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="116dp"
        android:alpha="0.2"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/iger" />


</androidx.constraintlayout.widget.ConstraintLayout>